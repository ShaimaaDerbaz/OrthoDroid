<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_operation"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shaimaaderbaz.orthoclinic.activities.EditOperationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Operation Name"
                android:textColor="@color/colorGray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:background="@drawable/edittextstyl"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                >


                <EditText
                    android:id="@+id/operation_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="name"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:background="#fff"
                    android:layout_weight="9"
                    android:layout_margin="16dp"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/date_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Date"
                android:textColor="@color/colorGray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:background="@drawable/edittextstyl"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                >
                <EditText
                    android:id="@+id/date_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="date"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:background="#fff"
                    android:layout_weight="9"
                    android:layout_margin="16dp"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/steps_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Steps"
                android:textColor="@color/colorGray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:background="@drawable/edittextstyl"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                >
                <EditText
                    android:id="@+id/steps_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="steps"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:background="#fff"
                    android:layout_weight="9"
                    android:layout_margin="16dp"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/persons_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Persons"
                android:textColor="@color/colorGray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:background="@drawable/edittextstyl"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                >
                <EditText
                    android:id="@+id/person_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="person name"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:background="#fff"
                    android:layout_weight="9"
                    android:layout_margin="16dp"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/follow_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Follow Up"
                android:textColor="@color/colorGray"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:background="@drawable/edittextstyl"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                >
                <EditText
                    android:id="@+id/follow_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="follow up"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:background="#fff"
                    android:layout_weight="9"
                    android:layout_margin="16dp"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/linear_select_image_op"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                >
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_background"
                    android:id="@+id/select_image_button_op"
                    android:text="select images"
                    android:inputType="textCapWords"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/linear_select_vedio_op"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                >
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_background"
                    android:id="@+id/select_video_button_op"
                    android:text="select Videos"
                    android:inputType="textCapWords"/>
            </LinearLayout>


        </LinearLayout>



    </ScrollView>

    <Button
        android:id="@+id/btnAddOperation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:text="Add Operation"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp">
    </Button>

</LinearLayout>
