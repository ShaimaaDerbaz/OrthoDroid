<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="10"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shaimaaderbaz.orthoclinic.fragments.HistoryFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/ch_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="CH."
        android:textColor="@color/colorGray"/>
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/edittextstyl"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        >


        <EditText
            android:id="@+id/ch_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="CH information"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorGray"
            android:background="#fff"
            android:layout_weight="9"
            android:layout_margin="16dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/gastritis_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Gastritis"
        android:textColor="@color/colorGray"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/edittextstyl"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        >
        <EditText
            android:id="@+id/gastritis_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Gastritis information"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorGray"
            android:background="#fff"
            android:layout_weight="9"
            android:layout_margin="16dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/smoking_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Smoking"
        android:textColor="@color/colorGray"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/edittextstyl"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        >
        <EditText
            android:id="@+id/somking_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Smoking information"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorGray"
            android:background="#fff"
            android:layout_weight="9"
            android:layout_margin="16dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/edittextstyl"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Body :"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/pregnacy_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Pregnacy"
        android:textColor="@color/colorGray"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/edittextstyl"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        >
        <EditText
            android:id="@+id/pregnacy_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Pregnacy information"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorGray"
            android:background="#fff"
            android:layout_weight="9"
            android:layout_margin="16dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/lactation_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Lactation"
        android:textColor="@color/colorGray"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/edittextstyl"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        >
        <EditText
            android:id="@+id/lactation_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Lactation information"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorGray"
            android:background="#fff"
            android:layout_weight="9"
            android:layout_margin="16dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    </LinearLayout>



</ScrollView>

        <Button
            android:id="@+id/btnAddHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Add History"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp">
        </Button>



</LinearLayout>
